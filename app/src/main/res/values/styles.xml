<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="textbox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox"/>

    <style name="mytheme" parent="Theme.MaterialComponents.Light">

    <item name="colorPrimary">#7e3ff2</item>
    <item name="colorAccent">#b794f6</item>
    <item name="colorPrimaryDark">#6002ee</item>
    <item name="android:fontFamily">@font/comfortaa</item>


</style>
    <style name="mythemeNoActionBar" parent="Theme.MaterialComponents.DayNight">

        <item name="colorPrimary">#7e3ff2</item>
        <item name="colorAccent">#b794f6</item>
        <item name="colorPrimaryDark">#6002ee</item>
        <item name="android:fontFamily">@font/comfortaa</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>


    <style name="mythemeActionBar" parent="Theme.MaterialComponents.DayNight">

        <item name="colorPrimary">#7e3ff2</item>
        <item name="colorAccent">#b794f6</item>
        <item name="colorPrimaryDark">#6002ee</item>
        <item name="android:fontFamily">@font/comfortaa</item>


    </style>


</resources>
